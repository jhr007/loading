        line-height: 200px;
        color: white;
        box-shadow: 0 0 5px rgba(0,0,0,0.5);
        /*z-index: 11;*/

    }
    #loading:before {
        /* outer ring */
        content: "";
        position: absolute;
        left: -20px;
        top: -20px;
        bottom: -20px;
        right: -20px;
        border-radius: 140px;
        background: #080;
        z-index: -2; //-2
        box-shadow: inset 0 0 10px rgba(0,0,0,0.2);
    }
    #loading span {
        /* spinning object */
        position: absolute;
        width: 0;
        height: 0;
        border-left: 50px solid transparent;
        border-right: 50px solid transparent;
        border-top: 160px solid rgba(255,0,255,0.7);
        z-index: 3; // -1
        top: -56 px;
        left: 49px;
        animation: ticktock 5s linear infinite;
        transform-origin: 50px 160px;
    }
    #loading strong {
        overflow: hidden;
        display: block;
        margin: 0 auto;
        animation: expand 2.5s linear infinite;
        z-index: 100;
    }

    @keyframes expand {
        0% {
            width: 0;
        }
        100% {
            width: 60px;
        }
    }

    @keyframes ticktock {
        0% {

            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

